<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/heroes_current_game_width"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/heroes_margin_half"
    android:layout_marginEnd="@dimen/heroes_margin_half"
    android:padding="@dimen/heroes_margin"
    android:background="@color/background_card">

    <TextView
        android:id="@+id/game_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title_light"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/game_remaining_days_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/heroes_margin_quarter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title_light"
        android:text="@string/heroes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:contentDescription="@string/_" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:contentDescription="@string/_" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:contentDescription="@string/_"/>

    </LinearLayout>
</LinearLayout>